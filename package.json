{
	"name": "@discord-samba/logger",
	"version": "0.1.0",
	"description": "Logger module for Discord-Samba",
	"main": "bin/index.js",
	"scripts": {
		"test": "jest --passWithNoTests"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/discord-samba/logger.git"
	},
	"author": "Zack Campbell",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/discord-samba/logger/issues"
	},
	"homepage": "https://github.com/discord-samba/logger#readme",
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-angular": "^8.3.4",
		"@discord-samba/eslint-config": "discord-samba/eslint-config",
		"@types/jest": "^25.1.4",
		"@types/node": "^14.14.3",
		"@typescript-eslint/eslint-plugin": "2.24.0",
		"@typescript-eslint/parser": "2.24.0",
		"del": "^5.1.0",
		"eslint": "^6.5.1",
		"gulp": "^4.0.2",
		"gulp-eslint": "^6.0.0",
		"gulp-sourcemaps": "^2.6.5",
		"gulp-typescript": "^5.0.1",
		"husky": "^4.2.3",
		"jest": "^25.1.0",
		"lint-staged": "^10.0.8",
		"madge": "^3.5.0",
		"ts-jest": "^25.2.1",
		"typedoc": "0.17.1",
		"typescript": "^3.7.2"
	},
	"eslintConfig": {
		"extends": "@discord-samba"
	},
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"testRegex": "/__test__/.+\\.test\\.ts$",
		"verbose": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.ts": [
			"eslint",
			"jest --bail --findRelatedTests"
		],
		"*.js": "eslint"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		],
		"rules": {
			"scope-case": [
				2,
				"always",
				[
					"pascal-case",
					"lower-case",
					"kebab-case"
				]
			],
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"build",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test",
					"tooling"
				]
			]
		}
	}
}
